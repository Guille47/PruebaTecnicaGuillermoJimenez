@model PruebaTecnicaGuillermoJimenez.Models.TableViewModels.VerEmpleadosTableViewModel
@{
    ViewBag.Title = "Ver";
}

<h2>Empleados</h2>

<div class="row">
    <div class="col-md-12">
        <input type="button" value="Agregar" class="btn btn-primary" onclick="document.location.href='@Url.Content("~/Empleados/Agregar")'" />
    </div>
</div>

<br />
<div class="row">
    <div class="col-lg-12">
        <table class="table table-striped table-bordered">
            <tr>
                <th>Informacion</th>
                <th>Detalle</th>
            </tr>
            <tr>
                <th>ID</th>
                <td>@Model.IdEmpleado</td>
            </tr>
            <tr>
                <th>Nombre Completo</th>
                <td>@Model.NombreCompleto</td>
            </tr>
            <tr>
                <th>Cedula</th>
                <td>@Model.Cedula</td>
            </tr>
            <tr>
                <th>Correo</th>
                <td>@Model.Correo</td>
            </tr>
            <tr>
                <th>Fecha De Nacimiento</th>
                <td>@Model.FechaNacimiento</td>
            </tr>
            <tr>
                <th>Fecha De Ingreso</th>
                <td>@Model.FechaIngreso</td>
            </tr>
            <tr>
                <th>Jefe</th>
                <td>@Model.NombreJefe</td>
            </tr>
            <tr>
                <th>Area</th>
                <td>@Model.NombreArea</td>
            </tr>
            <tr>
                <th>Edad</th>
                <td>@Model.Edad</td>
            </tr>
            <tr>
                <th>Años laborando</th>
                <td>@Model.AniosLaborando</td>
            </tr>
            <tr>
                <th>Foto</th>
                <td>
                    @{
                        var base64 = Convert.ToBase64String(Model.Foto);
                        var imgsrc = string.Format("data:image/png;base64,{0}", base64);
                    }
                    <img style="max-height:100px;" src="@imgsrc" alt="Foto" />
                </td>
            </tr>
        </table>
    </div>
</div>
